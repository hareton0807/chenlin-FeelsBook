<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ca.ualberta.cs.lonelytwitter.countActivity">

    <TextView
        android:id="@+id/loveCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20sp"
        android:textSize="20sp"
        android:text="Love Count: "
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/joyCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20sp"
        android:textSize="20sp"
        android:text="Joy Count: "
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/surpriseCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20sp"
        android:textSize="20sp"
        android:text="Surprise Count: "
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/angerCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20sp"
        android:textSize="20sp"
        android:text="Anger Count: "
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/sadnessCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20sp"
        android:textSize="20sp"
        android:text="Sadness Count:"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/fearCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20sp"
        android:textSize="20sp"
        android:text="Fear Count: "
        android:textColor="@color/white"/>



    

</LinearLayout>
